<skin>
    <name>Space</name>
    <author>Peter</author>
    <version>1.0</version>
    <description>Cool space skin</description>
    <background>
        <png>bg.png</png>
    </background>
    <character>
        <png>cr.png</png>
        <x>40</x>
        <y>50</y>
		<bobbing>
			<enabled>True</enabled>
            <amplitude>4</amplitude>
            <speed>0.6</speed>
		</bobbing>
		<animation>
			<enabled>True</enabled>
			<speed>4</speed>
			<framecount>9</framecount>
		</animation>
        <temp>
            <warm>20</warm>
            <hot>96</hot>
            <usepercentage>true</usepercentage>
        </temp>
    </character>
    <weather>
        <text>
            <fontindex>1</fontindex>
            <x>340</x>
            <y>20</y>
            <size>112</size>
        </text>
    </weather>
    <hwmon>
        <fontindex>0</fontindex>
        <cpu>
            <usage>
                <text>
                    <x>630</x>
                    <y>40</y>
                    <size>40</size>
                </text>
                <icon>
                    <path>icon/cpu.png</path>
                    <x>534</x>
                    <y>68</y>
                    <width>0</width>
                    <height>0</height>
                </icon>
            </usage>
            <temp>
            </temp>
            <combine>True</combine>
            <combinedivider>  @  </combinedivider>
			<pincombinedivider>True</pincombinedivider>
        </cpu>
        <mem>
            <usage>
				<header>Mem: </header>
                <text>
                    <x>630</x>
                    <y>100</y>
                    <size>40</size>
                </text>
                <icon>
                    <path>icon/mem.png</path>
                    <x>528</x>
                    <y>118</y>
                    <width>0</width>
                    <height>0</height>
                </icon>
            </usage>
        </mem>
        <train>
            <next>
				<text>
					<x>630</x>
					<y>166</y>
					<size>28</size>
					<divider>  |  </divider>
				</text>
                <icon>
                    <path>icon/train.png</path>
                    <x>520</x>
                    <y>166</y>
                    <width>0</width>
                    <height>0</height>
                </icon>
            </next> 
        </train>
    </hwmon>
    <fonts>
        <font id="0">
            <ttf>font/Aero.ttf</ttf>
            <color>#FFFFFF</color>
			<outline>
                <enabled>true</enabled>
                <color>#80a2a3</color>
                <thickness>3</thickness>
            </outline>
        </font>
		<font id="0">
            <ttf>font/Aero.ttf</ttf>
            <color>#FFFFFF</color>
			<outline>
                <enabled>true</enabled>
                <color>#80a2a3</color>
                <thickness>5</thickness>
            </outline>
        </font>
    </fonts>
	<flash>
        <background>false</background>
        <character>true</character>
        <weather_icon>false</weather_icon>
		<loading>false</loading>
    </flash>
</skin>