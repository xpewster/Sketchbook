<skin>
    <name>Sketchbook</name>
    <author>Peter</author>
    <version>1.0</version>
    <description>Full colors~</description>
    <background>
        <png>bg.png</png>
        <animation>
            <enabled>true</enabled>
            <speed>10</speed>
            <framecount>4</framecount>
        </animation>
    </background>
    <character>
        <png>char.png</png>
        <hot><png>char_hot.png</png></hot>
        <x>400</x>
        <y>50</y>
        <flip>false</flip>
    </character>
    <weather>
        <icon>
            <sunny><png>weather/sunny.png</png></sunny>
            <cloudy><png>weather/cloudy.png</png></cloudy>
            <rainy><png>weather/rainy.png</png></rainy>
            <snowy><png>weather/snowy.png</png></snowy>
            <thunderstorm><png>weather/thunderstorm.png</png></thunderstorm>
            <foggy><png>weather/foggy.png</png></foggy>
            <night><png>weather/night.png</png></night>
            <width>50</width>
            <height>50</height>
            <x>10</x>
            <y>10</y>
            <bobbing>
                <enabled>true</enabled>
                <speed>5</speed>
            </bobbing>
        </icon>
        <text>
            <fontindex>0</fontindex>
            <x>70</x>
            <y>10</y>
            <color>#000000</color>
            <size>16</size>
        </text>
    </weather>
    <hwmon>
        <fontindex>0</fontindex>
        <cpu>
            <usage>
                <text>
                    <x>600</x>
                    <y>20</y>
                    <color>#000000</color>
                    <size>14</size>
                </text>
                <icon>
                    <path>icon/cpu.png</path>
                </icon>
            </usage>
            <temp>
                <text>
                    <x>600</x>
                    <y>40</y>
                    <color>#000000</color>
                    <size>14</size>
                </text>
                <icon>
                    <path>icon/cpu.png</path>
                </icon>
            </temp>
            <combine>True</combine>
        </cpu>
        <mem>
            <usage>
                <text>
                    <x>600</x>
                    <y>60</y>
                    <color>#000000</color>
                    <size>14</size>
                </text>
                <icon>
                    <path>icon/mem.png</path>
                </icon>
            </usage>
        </mem>
        <train>
            <next>
                <x>600</x>
                <y>80</y>
                <color>#000000</color>
                <size>14</size>
            </next>
            <icon>
                <path>icon/train.png</path>
            </icon>
        </train>
    </hwmon>
</skin>